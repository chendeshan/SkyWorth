<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/base_dialog_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/base_alert_dialog_icon"/>

        <TextView
            android:id="@+id/base_dialog_title"
            android:layout_height="55dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/base_dialog_title_text_color"
            android:lines="1"/>
        </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/base_dialog_separate_color" />

    <FrameLayout
        android:id="@+id/base_dialog_content"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/base_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="18sp"
            android:textColor="@color/base_dialog_message_text_color"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/base_dialog_positive_button"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/base_dialog_positive_text_color"
                android:background="@drawable/dialog_btn_background"/>

            <View
                android:id="@+id/base_dialog_sep_line"
                android:layout_width="10dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/base_dialog_negative_button"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/base_dialog_negative_text_color"
                android:background="@drawable/dialog_btn_background"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/base_dialog_separate_color" />

    </RelativeLayout>
</LinearLayout>